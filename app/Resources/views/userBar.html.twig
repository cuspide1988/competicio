<div class="contain-to-grid">
    <nav class="top-bar">
        <ul>
            <!-- Title Area -->
            <li class="name">
                <h1>
                    <a href="{{ path('competition_frontend_homepage') }}">
                        CompetitionMaster
                    </a>
                </h1>
            </li>
            <li class="toggle-topbar"><a href="#"></a></li>
        </ul>


        <section>
            <!-- Left Nav Section -->
            <ul class="left">

                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                    <a href="{{ path('fos_user_security_logout') }}">
                        {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                    </a>
                    {% for key, message in app.session.getFlashes() %}
                        <div class="{{ key }}">
                            {{ message|trans({}, 'FOSUserBundle') }}
                        </div>
                    {% endfor %}
                {% else %}
                    <li class="has-button">
                        <a class="small button" href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
                    </li>
                    <li class="has-button">
                        <a class="small button" href="{{ path('fos_user_registration_register') }}">{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</a>
                    </li>
                {% endif %}
            </ul>

            <!-- Right Nav Section -->
            <ul class="right">
                <li class="divider show-for-medium-and-up"></li>
                <li class="has-dropdown">
                    <a href="#">Language</a>
                    <ul class="dropdown">
                        <li><a href="{{ path('competition_frontend_homepage', {_locale: 'en'}) }}">english</a></li>
                        <li><a href="{{ path('competition_frontend_homepage', {_locale: 'es'}) }}">espa√±ol</a></li>
                    </ul>
                </li>
                <li class="divider"></li>
                <li class="search">
                    <form>
                        <input type="search">
                    </form>
                </li>
            </ul>
        </section>
    </nav>
</div>